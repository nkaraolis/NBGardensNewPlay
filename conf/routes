# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Route to show the homepage
GET     /                           controllers.HomeController.home

# An example controller showing a sample home page
GET     /browse                      controllers.HomeController.home()


# An example controller showing how to use dependency injection

GET     /count                      controllers.CountController.count

# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Route to show the registration page
GET     /registration               controllers.RegistrationController.registration

POST    /registration               controllers.RegistrationController.saveCustomer

GET     /registration               controllers.RegistrationController.show




GET     /login                      controllers.LoginController.newLogin
POST    /login                      controllers.LoginController.save

GET    /login/:Email               controllers.LoginController.login3(Email:String)

#GET    /login/:user                controllers.HomeController.confirm(user: CustomerLogin)




GET     /contact                    controllers.ContactController.contact

GET     /about                      controllers.AboutController.about
